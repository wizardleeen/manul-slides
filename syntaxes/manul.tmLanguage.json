{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "manul",
    "scopeName": "source.manul",
    "aliases": ["mnl"],
    "patterns": [
      {
        "comment": "Comments",
        "patterns": [
          {
            "match": "//.*$",
            "name": "comment.line.double-slash.manul"
          }
        ]
      },
      {
        "comment": "Strings",
        "begin": "\"",
        "end": "\"",
        "name": "string.quoted.double.manul",
        "patterns": [
          {
            "match": "\\\\.",
            "name": "constant.character.escape.manul"
          }
        ]
      },
      {
        "comment": "Keywords for definitions",
        "match": "\\b(class|fn|var|val|static|new|interface|enum|package|import)\\b",
        "name": "storage.type.manul"
      },
      {
        "comment": "Control keywords",
        "match": "\\b(if|else|for|in|return|throw|require)\\b",
        "name": "keyword.control.manul"
      },
      {
        "comment": "Constants (boolean/null)",
        "match": "\\b(true|false|null)\\b",
        "name": "constant.language.manul"
      },
      {
        "comment": "Function Definition (e.g. fn addMember)",
        "match": "\\b(fn)\\s+([a-zA-Z_]\\w*)",
        "captures": {
          "1": { "name": "storage.type.function.manul" },
          "2": { "name": "entity.name.function.manul" }
        }
      },
      {
        "comment": "Class Definition",
        "match": "\\b(class)\\s+([a-zA-Z_]\\w*)",
        "captures": {
          "1": { "name": "storage.type.class.manul" },
          "2": { "name": "entity.name.type.class.manul" }
        }
      },
      {
        "comment": "Function Calls (e.g. now(), addMember())",
        "match": "\\b([a-zA-Z_]\\w*)\\s*(?=\\()",
        "name": "entity.name.function.manul"
      },
      {
        "comment": "Annotations (e.g. @Summary)",
        "match": "@\\w+",
        "name": "meta.annotation.manul variable.annotation.manul"
      },
      {
        "comment": "Primitive Types (long, string, bool)",
        "match": "\\b(string|long|int|bool|void)\\b",
        "name": "support.type.primitive.manul"
      },
      {
        "comment": "Class Types (Capitalized words like User, PlanConfig)",
        "match": "\\b[A-Z]\\w*\\b",
        "name": "support.class.manul"
      },
      {
        "comment": "Operators",
        "match": "(\\+|\\-|\\*|/|=|!|<|>|\\?|:|->)",
        "name": "keyword.operator.manul"
      },
      {
        "comment": "Numeric literals",
        "match": "\\b\\d+\\b",
        "name": "constant.numeric.manul"
      }
    ]
  }